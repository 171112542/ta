<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_16">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_photo_image_view"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.TA.RoundedComponent"
        app:strokeWidth="@dimen/dp_2"
        app:strokeColor="?attr/colorPrimary"
        android:padding="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_32"
        android:src="@drawable/ic_person"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_course_container"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_32"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_photo_image_view"
        app:layout_constraintTop_toTopOf="@id/profile_photo_image_view"
        app:layout_constraintBottom_toBottomOf="@id/profile_photo_image_view"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyTheme.ShapeableImageView.Rounded.TopBottomLeft" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_32"
        android:paddingStart="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@id/profile_course_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_photo_image_view"
        app:layout_constraintTop_toTopOf="@id/profile_course_container"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="@style/TextAppearance.TA.Headline3"
                android:textColor="?attr/colorOnPrimary"
                android:text="0"
                android:gravity="bottom"
                android:layout_weight="1"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="@style/TextAppearance.TA.Headline4"
                android:textColor="?attr/colorOnPrimary"
                android:text="Courses"
                android:gravity="top"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="@style/TextAppearance.TA.Headline3"
                android:textColor="?attr/colorOnPrimary"
                android:text="0"
                android:gravity="bottom"
                android:layout_weight="1"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="@style/TextAppearance.TA.Headline4"
                android:textColor="?attr/colorOnPrimary"
                android:text="Finished"
                android:gravity="top"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_name_section_container"
        app:layout_constraintTop_toBottomOf="@id/profile_photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:paddingStart="@dimen/dp_32">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person Smith"
            android:textAppearance="@style/TextAppearance.TA.Headline5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/profile_bio"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Something in bio?"
            android:textAppearance="@style/TextAppearance.TA.Subtitle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_name"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/profile_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.TA.Button.OutlinedButton.Secondary"
            android:textColor="?attr/colorSecondary"
            android:text="@string/edit_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent
"           app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/profile_tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/profile_name_section_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/profile_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/profile_tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>