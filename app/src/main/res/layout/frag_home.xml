<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/offset_bottom_navbar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/keyline_4"
        android:clipToPadding="false"
        android:clipChildren="false">

        <View
            android:id="@+id/frag_home_search_bar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@drawable/drawable_rounded_rect"
            android:backgroundTint="?attr/colorSurface"
            android:clickable="true"
            android:elevation="@dimen/keyline_1"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/frag_home_search_icon"
            style="@style/Widget.TA.Icon"
            android:contentDescription="@string/search_bar_content_description"
            android:elevation="@dimen/keyline_1"
            android:src="@drawable/ic_search_24dp"
            android:layout_marginStart="@dimen/keyline_4"
            app:layout_constraintBottom_toBottomOf="@+id/frag_home_search_bar"
            app:layout_constraintStart_toStartOf="@+id/frag_home_search_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_home_search_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            android:elevation="@dimen/keyline_1"
            android:text="@string/search_bar_hint"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@+id/frag_home_search_bar"
            app:layout_constraintStart_toEndOf="@+id/frag_home_search_icon"
            app:layout_constraintTop_toTopOf="@+id/frag_home_search_bar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frag_home_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_home_search_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>