<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/offset_bottom_navbar"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/keyline_4">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/frag_home_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_4"
            android:indeterminate="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_home_search_bar" />

        <View
            android:id="@+id/frag_home_search_bar"
            android:layout_width="0dp"
            android:layout_height="@dimen/search_bar_height"
            android:layout_marginEnd="@dimen/keyline_2"
            android:background="@drawable/drawable_rounded_rect"
            android:backgroundTint="?attr/colorSurface"
            android:clickable="true"
            android:elevation="@dimen/keyline_2"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toStartOf="@+id/frag_home_notification_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/frag_home_notification_container"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/search_bar_height"
            android:background="@drawable/drawable_rounded_rect"
            android:backgroundTint="?attr/colorSurface"
            android:clickable="true"
            android:elevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/frag_home_search_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frag_home_search_bar" />

        <ImageView
            android:id="@+id/frag_home_notification"
            style="@style/Widget.TA.Icon"
            android:background="?attr/colorSurface"
            android:clickable="false"
            android:contentDescription="@string/notification_label"
            android:elevation="@dimen/keyline_2"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_notification_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_home_notification_container"
            app:layout_constraintEnd_toEndOf="@+id/frag_home_notification_container"
            app:layout_constraintStart_toStartOf="@+id/frag_home_notification_container"
            app:layout_constraintTop_toTopOf="@+id/frag_home_notification_container" />

        <ImageView
            android:id="@+id/frag_home_search_icon"
            style="@style/Widget.TA.Icon"
            android:layout_marginStart="@dimen/keyline_4"
            android:clickable="false"
            android:contentDescription="@string/ic_search_content_description"
            android:elevation="@dimen/keyline_2"
            android:src="@drawable/ic_search_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/frag_home_search_bar"
            app:layout_constraintStart_toStartOf="@+id/frag_home_search_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_home_search_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            android:clickable="false"
            android:elevation="@dimen/keyline_2"
            android:text="@string/search_bar_hint"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@+id/frag_home_search_bar"
            app:layout_constraintStart_toEndOf="@+id/frag_home_search_icon"
            app:layout_constraintTop_toTopOf="@+id/frag_home_search_bar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frag_home_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_4"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_home_search_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>