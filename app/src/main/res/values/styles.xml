<resources>
    <style name="Widget.TA.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinHeight">45dp</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TA.SmallComponent</item>
    </style>
    <style name="Widget.TA.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:textAppearance">@style/TextAppearance.TA.Subtitle1</item>
    </style>
    <style name="Widget.TA.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TA.TextInputLayout.FilledBox</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TA.SmallComponent</item>
    </style>
    <style name="Widget.TA.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TA.TextInputLayout.OutlinedBox</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TA.SmallComponent</item>
    </style>
    <style name="ThemeOverlay.TA.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/turqoise</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red_dark</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TA.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TA.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>
    <style name="ThemeOverlay.TA.TextInputLayout.FilledBox" parent="">
        <item name="colorPrimary">@color/turqoise</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red_dark</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TA.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TA.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox</item>
    </style>
    <style name="Widget.TA.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TA.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.TA.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TA.SmallComponent</item>
    </style>
    <style name="Widget.TA.Button.TextButton.Secondary" parent="Widget.TA.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TA.Button.TextButton.Secondary</item>
    </style>
    <style name="Widget.TA.Button.CloseButton" parent="Widget.TA.Button.TextButton">
        <item name="android:drawableEnd">@drawable/ic_close</item>
        <item name="android:padding">@dimen/dp_0</item>
    </style>
    <style name="Widget.TA.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TA.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.TA.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TA.SmallComponent</item>
    </style>
    <style name="Widget.TA.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TA.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.TA.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TA.SmallComponent</item>
    </style>
    <style name="Widget.TA.Button.Google" parent="Widget.TA.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TA.Button.Google</item>
        <item name="android:drawableLeft">@drawable/fui_ic_googleg_color_24dp</item>
        <item name="android:text">@string/fui_sign_in_with_google</item>
    </style>
    <style name="ThemeOverlay.TA.Button.TextButton" parent="">
        <item name="colorPrimary">@color/turqoise</item>
    </style>
    <style name="ThemeOverlay.TA.Button.TextButton.Secondary" parent="">
        <item name="colorPrimary">@color/red</item>
    </style>
    <style name="ThemeOverlay.TA.Button" parent="">
        <item name="colorPrimary">@color/turqoise</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="ThemeOverlay.TA.Button.Google" parent="">
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="colorOnPrimary">?attr/colorOnSurface</item>
    </style>
    <style name="Widget.TA.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="layout_behavior">com.google.android.material.behavior.HideBottomViewOnScrollBehavior</item>
    </style>
    <style name="Widget.TA.FloatingActionButton.Surface" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:background">?attr/colorSurface</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="tint">?attr/colorControlNormal</item>
    </style>
    <style name="Widget.TA.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline2</item>
    </style>
    <style name="Widget.TA.Toolbar.Back" parent="Widget.TA.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>
    <style name="Widget.TA.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.TA.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.TA.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>
    <style name="ShapeAppearance.TA.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="ShapeAppearance.TA.RoundedComponent" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeAppearance.TA.RoundedComponent.Stroke" parent="ShapeAppearance.TA.RoundedComponent">
        <item name="strokeWidth">@dimen/dp_1</item>
        <item name="android:strokeWidth">@dimen/dp_1</item>
    </style>
</resources>